<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView android:text="DICE GAME" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button1"
        android:onClick="button1_click"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tv_6"
        android:layout_toStartOf="@+id/tv_6" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton"
        android:src="@drawable/red_die_1"
        android:clickable="true"
        android:longClickable="false"
        android:scaleType="fitCenter"
        android:onClick="dice_click"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/roll_1"
        android:layout_below="@id/imageButton"
        android:layout_toRightOf="@+id/tv_1"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:password="false"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/roll_2"
        android:layout_below="@+id/roll_1"
        android:layout_toRightOf="@+id/tv_2"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:password="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/roll_3"
        android:layout_below="@+id/roll_2"
        android:layout_toRightOf="@+id/tv_3"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:password="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/roll_4"
        android:layout_below="@+id/roll_3"
        android:layout_toRightOf="@+id/tv_4"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:password="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/roll_5"
        android:layout_below="@+id/roll_4"
        android:layout_toRightOf="@+id/tv_5"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:password="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/roll_6"
        android:layout_below="@+id/roll_5"
        android:layout_toRightOf="@+id/tv_6"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:password="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1: "
        android:id="@+id/tv_1"
        android:layout_below="@id/imageButton"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2: "
        android:id="@+id/tv_2"
        android:layout_below="@id/tv_1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3: "
        android:id="@+id/tv_3"
        android:layout_below="@id/tv_2"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4: "
        android:id="@+id/tv_4"
        android:layout_below="@id/tv_3"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5: "
        android:id="@+id/tv_5"
        android:layout_below="@id/tv_4"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="6: "
        android:id="@+id/tv_6"
        android:layout_below="@id/tv_5"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Color"
        android:id="@+id/color_button"
        android:layout_alignBottom="@+id/button1"
        android:layout_toRightOf="@+id/roll_6"
        android:layout_toEndOf="@+id/roll_6"
        android:onClick="color_click" />


</RelativeLayout>
